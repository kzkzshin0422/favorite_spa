<h2><%= @user.last_name + @user.first_name %>さんの編集</h2>

<%= form_with model:[:admin, @user] do |f| %>

<div>
  <%= f.label :氏名 %></br>
  <%= f.text_field :last_name %> <%= f.text_field :first_name %>
</div>

<div>
  <%= f.label :メールアドレス %></br>
  <%= f.text_field :email %>
</div>

<div>
  <%= f.label :ニックネーム %></br>
  <%= f.text_field :nickname %>
</div>

<div>
  <%= f.label :プロフィール %></br>
  <%= f.text_field :profile %>
</div>

<%= f.submit '編集内容を保存' %>

<% end %>

<%= link_to '退会する', admin_user_confirm_path(@user) %>

