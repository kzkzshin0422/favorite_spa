<h2>プロフィール編集</h2>
 <%= form_with model: @user do |f| %>
  <div>
    <label for="inputImage">プロフィール画像:</label>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  </div>
  <div>
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :nickname %>
  </div>
  <div>
    <%= f.label :プロフィール文 %><br />
    <%= f.text_area :profile %>
  </div>
  <div>
    <%= f.submit "編集内容を保存" %>
  </div>
 <% end %>
 
 <%= link_to '退会する', users_confirm_path %>
 